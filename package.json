{
  "name": "file-properties",
  "displayName": "File Properties",
  "description": "A VSCode extension for conveniently displaying file properties.",
  "icon": "resources/icons/logo.png",
  "version": "0.9.0",
  "publisher": "dsyx",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dsyx/file-properties.git"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "File Properties",
      "type": "object",
      "properties": {
        "file-properties.showPermissionsInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show file permissions in status bar."
        },
        "file-properties.showSizeInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show file size in status bar."
        },
        "file-properties.showMtimeInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show file last modified date in status bar."
        },
        "file-properties.useSiSizeUnit": {
          "type": "boolean",
          "default": false,
          "description": "Use the size unit defined in SI (1 KB = 1000 B) instead of the definition in the IEC standard (1 KiB = 1024 B)."
        },
        "file-properties.dateFormat": {
          "type": "string",
          "default": "yyyy-MM-dd HH:mm:ss",
          "description": "For the format of all dates, see: https://moment.github.io/luxon/#/formatting?id=table-of-tokens."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/luxon": "^3.3.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "luxon": "^3.4.2"
  }
}